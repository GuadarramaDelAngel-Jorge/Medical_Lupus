<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Padecimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="30dp">

        <ImageButton
            android:id="@+id/Dolor_extremo"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:background="@color/big"
            android:onClick="GenericToast"
            android:tint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toEndOf="@+id/Dolor_fuerte"
            app:layout_constraintTop_toBottomOf="@+id/analisis_clasif2"
            app:srcCompat="@drawable/bad_mood1"/>

        <ImageButton
            android:id="@+id/Dolor_fuerte"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:background="@color/medium"
            android:onClick="GenericToast"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/analisis_clasif1"
            app:srcCompat="@drawable/bad_mood1"/>

        <TextView
            android:id="@+id/analisis_clasif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="8dp"
            android:text="Dolor ligero"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toTopOf="@+id/Dolor_extremo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Dolor_ligero"
            app:layout_constraintVertical_bias="1.0"/>

        <TextView
            android:id="@+id/analisis_clasif4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="88dp"
            android:text="Dolor extremo"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Dolor_extremo"/>

        <TextView
            android:id="@+id/analisis_clasif3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Dolor fuerte"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBaseline_toBaselineOf="@+id/analisis_clasif4"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/analisis_clasif1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:text="Sin dolor"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBaseline_toBaselineOf="@+id/analisis_clasif2"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/Dolor_ligero"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="40dp"
            android:background="@color/small"
            android:onClick="GenericToast"
            android:tint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toEndOf="@+id/Sin_dolor"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/bad_mood1"/>

        <ImageButton
            android:id="@+id/Sin_dolor"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="28dp"
            android:background="@color/good"
            android:onClick="GenericToast"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/mood1"/>

        <ImageButton
            android:id="@+id/Mover_derecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:onClick="GenericToast"
            android:tint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:srcCompat="@drawable/right_arrow1"/>

        <ImageButton
            android:id="@+id/Mover_izquierda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:onClick="GenericToast"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:srcCompat="@drawable/left_arrow1"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="29dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintStart_toEndOf="@+id/Texto1_analisis"
            app:layout_constraintTop_toBottomOf="@+id/Fecha_hoy"
            app:srcCompat="@drawable/favorite1"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="Padecimiento"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Mover_derecha"/>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="397dp"
            android:layout_height="182dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/Mover_derecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Otros_padecimientos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/secondaryColor"
                android:textColorHint="@color/secondaryDarkColor">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe algún otro padecimiento que tengas"
                    android:textColor="@color/secondaryColor"
                    android:textColorHint="@color/secondaryDarkColor"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/Texto1_analisis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="¿Cómo te sientes?"
            android:textColor="@color/primaryTextColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fecha_hoy"
            app:layout_constraintVertical_bias="0.39999998"/>

        <EditText
            android:id="@+id/Fecha_hoy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:hint="Fecha de hoy"
            android:inputType="date"
            android:textColor="@color/primaryTextColor"
            android:textColorHint="@color/secondaryColor"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="0dp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button5"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home1"
                android:onClick="ViewPPrincipal"
                android:text="Inicio"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/create1"
                android:onClick="ViewAAnalisis"
                android:text="Análisis diario"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/button3"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/assignment1"
                android:onClick="ViewAResultados"
                android:text="Resultados"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <Button
                android:id="@+id/button"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/done1"
                android:onClick="ViewARecordatorios"
                android:text="Recordatorios"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/button6"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/help1"
                android:onClick="ViewPAyuda"
                android:text="Ayuda"
                android:textSize="16sp"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>